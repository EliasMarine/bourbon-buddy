{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install --production=false",
        "buildCommand": "next build",
        "devCommand": "npm run dev",
        "outputDirectory": ".next"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/socketio/:path*",
      "destination": "/api/socketio"
    },
    {
      "source": "/socket.io/:path*",
      "destination": "/api/socketio"
    }
  ],
  "headers": [
    {
      "source": "/api/socketio",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval' https://*.supabase.co https://vercel.live https://*.clarity.ms https://c.bing.com; script-src-elem 'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval' https://*.supabase.co https://vercel.live https://*.clarity.ms https://c.bing.com https://www.apple.com https://appleid.cdn-apple.com https://idmsa.apple.com https://gsa.apple.com https://idmsa.apple.com.cn https://signin.apple.com; connect-src 'self' https://*.supabase.co wss://*.supabase.co wss://ws-us3.pusher.com https://api.openai.com https://vercel.live https://*.vercel.app https: http:; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https: http:; font-src 'self' data: https://fonts.gstatic.com; frame-src 'self' https://vercel.live https://appleid.apple.com https://js.stripe.com https://checkout.paddle.com; worker-src 'self' blob:; object-src 'none'; base-uri 'self';"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_SOCKET_URL": "https://bourbonbuddy.vercel.app",
    "NEXT_PUBLIC_SOCKET_PATH": "/api/socketio",
    "NEXT_PUBLIC_SOCKET_CREDENTIALS": "false",
    "PRISMA_CLIENT_ENGINE_TYPE": "dataproxy",
    "PRISMA_FORCE_TRANSACTIONS": "true",
    "DATABASE_CONNECTION_LIMIT": "1",
    "PGBOUNCER_PREPARED_STATEMENTS": "false",
    "POSTGRES_PRISMA_EXTENSION": "true",
    "POSTGRES_RESET_PREPARED_STATEMENTS": "true",
    "PRISMA_DISABLE_POOLING": "true",
    "USE_REDIS_FOR_SESSIONS": "true",
    "NODE_ENV": "production",
    "DEPLOYMENTHOST": "vercel",
    "LOG_TO_CONSOLE": "true",
    "LOG_TO_FILE": "false"
  },
  "redirects": [
    { "source": "/app", "destination": "/dashboard", "permanent": true },
    { "source": "/account", "destination": "/profile", "permanent": true },
    { "source": "/settings", "destination": "/profile", "permanent": true },
    { "source": "/whiskey/:path*", "destination": "/spirits/:path*", "permanent": true },
    { "source": "/bourbon/:path*", "destination": "/spirits/:path*", "permanent": true }
  ],
  "crons": [{
    "path": "/api/cron/newsletter",
    "schedule": "0 10 * * *"
  }]
} 