# Bourbon Buddy Environment Variables

# Redis Configuration
USE_REDIS_FOR_SESSIONS=true # Whether to use Redis for session storage
REDIS_URL= # URL for Redis connection

# Database Configuration
DATABASE_URL= # PostgreSQL connection string for Prisma
POSTGRES_URL= # PostgreSQL direct connection URL
POSTGRES_PRISMA_URL= # PostgreSQL URL for Prisma
SUPABASE_URL= # Supabase project URL
NEXT_PUBLIC_SUPABASE_URL= # Public Supabase URL (same as SUPABASE_URL)
NEXT_PUBLIC_SUPABASE_ANON_KEY= # Public Supabase anon key
POSTGRES_URL_NON_POOLING= # Non-pooling PostgreSQL URL
SUPABASE_JWT_SECRET= # Supabase JWT secret for authentication
POSTGRES_USER= # PostgreSQL username
NEXT_PUBLIC_SUPABASE_ANON_KEY= # Duplicated for clarity
POSTGRES_PASSWORD= # PostgreSQL password
POSTGRES_DATABASE= # PostgreSQL database name
SUPABASE_SERVICE_ROLE_KEY= # Supabase service role key
POSTGRES_HOST= # PostgreSQL host address

# MUX Configuration
MUX_TOKEN_SECRET= # MUX token secret
MUX_TOKEN_ID= # MUX token ID

# NextAuth Configuration
NEXTAUTH_URL= # URL of your application
NEXTAUTH_SECRET= # Secret for NextAuth session encryption

# OAuth Providers
GOOGLE_CLIENT_ID= # Google OAuth client ID
GOOGLE_CLIENT_SECRET= # Google OAuth client secret
GITHUB_CLIENT_ID= # GitHub OAuth client ID
GITHUB_CLIENT_SECRET= # GitHub OAuth client secret
FACEBOOK_CLIENT_ID= # Facebook OAuth client ID
FACEBOOK_CLIENT_SECRET= # Facebook OAuth client secret
APPLE_CLIENT_ID= # Apple OAuth client ID
APPLE_CLIENT_SECRET= # Apple OAuth client secret

# API Keys
OPENAI_API_KEY= # OpenAI API key for AI features

# Security
CSRF_SECRET= # Secret for CSRF token generation

# Additional Configuration
NODE_ENV=production # Environment: development, production, or test
ALLOWED_DEV_ORIGINS= # Comma-separated list of allowed origins for development

# Local Development Configuration - Copy this file to .env.local and fill in your values

# Database Configuration 
DATABASE_URL="postgresql://username:password@localhost:port/database_name"
DIRECT_DATABASE_URL="postgresql://username:password@localhost:port/database_name"
SHADOW_DATABASE_URL="postgresql://username:password@localhost:port/database_name_shadow"

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret"  # Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"

# Development Configuration
ALLOWED_DEV_ORIGINS="localhost,127.0.0.1"

# Debugging Configuration
# Set to "true" to enable auth middleware debugging logs
DEBUG_AUTH="false"

# Redis Configuration
# For development, you can disable Redis
DISABLE_REDIS="true"
REDIS_PREFIX="bourbon_buddy_local_"

# Bypass CSRF protection for development (not recommended for production)
BYPASS_CSRF="true"

# Supabase Configuration 
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Socket.IO Configuration
NEXT_PUBLIC_SOCKET_URL="http://localhost:3000"

# Other services
# Add other API keys and configuration settings as needed 