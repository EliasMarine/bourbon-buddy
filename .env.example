# Local Development Configuration

# Database Configuration
# Format: postgresql://<username>:<password>@<host>:<port>/<database>
DATABASE_URL="<database-url>"
DIRECT_DATABASE_URL="<database-url>"
SHADOW_DATABASE_URL="<database-url>"

# NextAuth Configuration
# Generate a secure secret with: openssl rand -base64 32
NEXTAUTH_SECRET="<generated-secret>"
NEXTAUTH_URL="http://localhost:3000"

# Development Configuration
# Comma-separated list of allowed development origins
ALLOWED_DEV_ORIGINS="<ip-address-1>,<ip-address-2>"

# Redis Configuration
# REDIS_URL="<redis-url>"
REDIS_PREFIX="bourbon_buddy_dev_"
DISABLE_REDIS="true"  # Disable Redis for tests/basic development

# Enable CSRF bypass for development
BYPASS_CSRF="true"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Socket.IO Configuration
NEXT_PUBLIC_SOCKET_URL="http://localhost:3000"

# MUX Video Configuration
MUX_TOKEN_ID="your-mux-token-id"
MUX_TOKEN_SECRET="your-mux-token-secret"
MUX_WEBHOOK_SECRET="your-mux-webhook-signing-secret"

# OAuth Providers (Optional - only needed if implementing OAuth)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
APPLE_CLIENT_ID=""
APPLE_CLIENT_SECRET=""

# AWS S3 Configuration (Optional - only needed if using AWS S3)
# AWS_ACCESS_KEY_ID="your-aws-access-key-id"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
# AWS_REGION="your-aws-region"
# AWS_BUCKET_NAME="your-aws-bucket-name"
